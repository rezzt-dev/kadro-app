<UserControl x:Class="craftingTask.resources.drawable.ModernColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:craftingTask.resources.drawable"
             mc:Ignorable="d" 
             MinWidth="290" MinHeight="310">
  <Border Padding="12" CornerRadius="10" Background="{StaticResource PopupBackground}" BorderBrush="{StaticResource PopupBorder}" BorderThickness="1">
    <StackPanel>
      <TextBlock Text="Seleccionar color" Foreground="{StaticResource PopupForeground}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>

      <Border Background="{Binding SelectedBrush, RelativeSource={RelativeSource AncestorType=UserControl}}" Style="{StaticResource PopupPreviewBorderStyle}"/>

      <Border CornerRadius="8" BorderBrush="{StaticResource MainBorderColor}" BorderThickness="2" Height="140" Width="230">
        <Grid x:Name="ColorPaletteGrid" ClipToBounds="True">
          <Rectangle RadiusX="7" RadiusY="7">
            <Rectangle.Fill>
              <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="#FF0000" Offset="0.0"/>
                <GradientStop Color="#FFFF00" Offset="0.17"/>
                <GradientStop Color="#00FF00" Offset="0.33"/>
                <GradientStop Color="#00FFFF" Offset="0.50"/>
                <GradientStop Color="#0000FF" Offset="0.66"/>
                <GradientStop Color="#FF00FF" Offset="0.82"/>
                <GradientStop Color="#FF0000" Offset="1.0"/>
              </LinearGradientBrush>
            </Rectangle.Fill>
          </Rectangle>

          <Rectangle RadiusX="7" RadiusY="7">
            <Rectangle.Fill>
              <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FFFFFFFF" Offset="0.0"/>
                <GradientStop Color="#00FFFFFF" Offset="0.5"/>
                <GradientStop Color="#FF000000" Offset="1.0"/>
              </LinearGradientBrush>
            </Rectangle.Fill>
          </Rectangle>
        </Grid>
      </Border>

      <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,8,0,0">
        <TextBlock Text="#" Foreground="#C8C8C8" VerticalAlignment="Center" Margin="0,0,6,0"/>
        <TextBox Text="{Binding ColorHex, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource SimpleDarkTextBoxStyle}" Width="200"/>
      </StackPanel>

      <StackPanel Orientation="Horizontal" Margin="0 12 0 0" HorizontalAlignment="Right">
        <Grid Margin="0">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
          </Grid.ColumnDefinitions>
          <Button Content="Cancelar" Width="100" Height="35" Grid.Column="0" Click="BtnCancel_Click" Style="{StaticResource PopupButtonStyle}" FontSize="10" VerticalContentAlignment="Center"
          HorizontalAlignment="Stretch"/>
          <Button Content="Aceptar" Width="100" Height="35" Grid.Column="1" Click="BtnAccept_Click" Style="{StaticResource PopupButtonStyle}" FontSize="10" VerticalContentAlignment="Center"/>
        </Grid>
      </StackPanel>
    </StackPanel>
  </Border>
</UserControl>
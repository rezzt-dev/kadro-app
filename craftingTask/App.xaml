<Application x:Class="craftingTask.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:craftingTask"
             StartupUri="view/windows/MainWindow.xaml">
  <Application.Resources>
    <!-- ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ paleta de colores para estilos ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ -->
    <SolidColorBrush x:Key="MainBackground" Color="#101010"/>
    <SolidColorBrush x:Key="SecondaryBackground" Color="#141414"/>
    <SolidColorBrush x:Key="BackgroundForeground" Color="#1a1a1a"/>
    <SolidColorBrush x:Key="MainForeground" Color="#EBEBEB"/>
    
    <SolidColorBrush x:Key="PanelBackground" Color="#141414"/>
    <SolidColorBrush x:Key="PanelBorder" Color="#3B3B3B"/>
    <SolidColorBrush x:Key="PanelTitleForeground" Color="#3B3B3B"/>

    <SolidColorBrush x:Key="TaskBackground" Color="#252525"/>
    <SolidColorBrush x:Key="TaskBorder" Color="#3A3A3A"/>
    <SolidColorBrush x:Key="TaskTitleForeground" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="TaskEndDateForeground" Color="#A0A0A0"/>
    <SolidColorBrush x:Key="TaskPriorityBorder" Color="#5A5A5A"/>
    <SolidColorBrush x:Key="TaskPriorityForeground" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="TaskTagBorder" Color="#4A4A4A"/>
    <SolidColorBrush x:Key="TaskTagBackground" Color="#2E2E2E"/>
    <SolidColorBrush x:Key="TaskTagForeground" Color="#B0B0B0"/>


    <!-- colores de los botones -->
    <SolidColorBrush x:Key="MinimizeButtonBackground" Color="#30D158"/>
    <SolidColorBrush x:Key="MinimizeButtonHover" Color="#28B048"/>
    <SolidColorBrush x:Key="MinimizeButtonClick" Color="#229938"/>

    <SolidColorBrush x:Key="MaximizeButtonBackground" Color="#FFD60A"/>
    <SolidColorBrush x:Key="MaximizeButtonHover" Color="#E6C009"/>
    <SolidColorBrush x:Key="MaximizeButtonClick" Color="#CCAA08"/>

    <SolidColorBrush x:Key="CloseButtonBackground" Color="#FF453A"/>
    <SolidColorBrush x:Key="CloseButtonHover" Color="#E63C31"/>
    <SolidColorBrush x:Key="CloseButtonClick" Color="#CC3328"/>

    <SolidColorBrush x:Key="CloseFrameButtonBackground" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="CloseFrameButtonHover" Color="#ADADAD"/>
    <SolidColorBrush x:Key="CloseFrameButtonClick" Color="#969696"/>

    <SolidColorBrush x:Key="AddBoardButtonBackground" Color="#3B3B3B"/>
    <SolidColorBrush x:Key="AddBoardFrameButtonHover" Color="#262626"/>
    <SolidColorBrush x:Key="AddBoardFrameButtonClick" Color="#0D0D0D"/>

    <SolidColorBrush x:Key="FunctionButtonBakground" Color="#2B2B2B"/>
    <SolidColorBrush x:Key="FunctionButtonHover" Color="#262626"/>
    <SolidColorBrush x:Key="FunctionButtonClick" Color="#0F0F0F"/>


    <!-- ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ estilo del boton de minimizar ventana ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ -->
    <Style x:Key="MinimizeWindowButton" TargetType="Button">
      <Setter Property="Background" Value="{StaticResource MinimizeButtonBackground}"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Width" Value="50"/>
      <Setter Property="Height" Value="50"/>
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="Cursor" Value="Hand"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border x:Name="border"
              Background="{TemplateBinding Background}"
              CornerRadius="25">
              <ContentPresenter HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
              <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="border" Property="Background" Value="{StaticResource MinimizeButtonHover}"/>
              </Trigger>
              <Trigger Property="IsPressed" Value="True">
                <Setter TargetName="border" Property="Background" Value="{StaticResource MinimizeButtonClick}"/>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>


    <!-- ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ estilo del boton de maximizar ventana ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ -->
    <Style x:Key="MaximizeWindowButton" TargetType="Button">
      <Setter Property="Background" Value="{StaticResource MaximizeButtonBackground}"/>
      <Setter Property="Foreground" Value="#1C1C1E"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Width" Value="50"/>
      <Setter Property="Height" Value="50"/>
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="Cursor" Value="Hand"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border x:Name="border"
              Background="{TemplateBinding Background}"
              CornerRadius="25">
              <ContentPresenter HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
              <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="border" Property="Background" Value="{StaticResource MaximizeButtonHover}"/>
              </Trigger>
              <Trigger Property="IsPressed" Value="True">
                <Setter TargetName="border" Property="Background" Value="{StaticResource MaximizeButtonClick}"/>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>


    <!-- ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ estilo del boton de cerrar ventana ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ -->
    <Style x:Key="CloseWindowButton" TargetType="Button">
      <Setter Property="Background" Value="{StaticResource CloseButtonBackground}"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Width" Value="50"/>
      <Setter Property="Height" Value="50"/>
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="Cursor" Value="Hand"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border x:Name="border"
              Background="{TemplateBinding Background}"
              CornerRadius="25">
              <ContentPresenter HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
              <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="border" Property="Background" Value="{StaticResource CloseButtonHover}"/>
              </Trigger>
              <Trigger Property="IsPressed" Value="True">
                <Setter TargetName="border" Property="Background" Value="{StaticResource CloseButtonClick}"/>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>


    <!-- ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ estilo de boton invisible ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ -->
    <Style x:Key="InvisibleButton" TargetType="Button">
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="BorderBrush" Value="Transparent"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Padding" Value="0"/>
      <Setter Property="OverridesDefaultStyle" Value="True"/>

      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <ContentPresenter/>
          </ControlTemplate>
        </Setter.Value>
      </Setter>

      <Setter Property="Focusable" Value="False"/>
    </Style>


    <!-- ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ estilo del boton de cerrar paginas ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ -->
    <Style x:Key="CloseFrameButton" TargetType="Button">
      <Setter Property="Background" Value="{StaticResource CloseFrameButtonBackground}"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Width" Value="50"/>
      <Setter Property="Height" Value="50"/>
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="Cursor" Value="Hand"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border x:Name="border"
          Background="{TemplateBinding Background}"
          CornerRadius="25">
              <ContentPresenter HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
              <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="border" Property="Background" Value="{StaticResource CloseFrameButtonHover}"/>
              </Trigger>
              <Trigger Property="IsPressed" Value="True">
                <Setter TargetName="border" Property="Background" Value="{StaticResource CloseFrameButtonClick}"/>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>


    <!-- ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ estilo del boton de agregar paginas ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ -->
    <Style x:Key="AddBoardButton" TargetType="Button">
      <Setter Property="Background" Value="{StaticResource AddBoardButtonBackground}"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Width" Value="50"/>
      <Setter Property="Height" Value="50"/>
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="Cursor" Value="Hand"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border x:Name="border"
      Background="{TemplateBinding Background}"
      CornerRadius="25">
              <ContentPresenter HorizontalAlignment="Center"
                  VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
              <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="border" Property="Background" Value="{StaticResource AddBoardFrameButtonHover}"/>
              </Trigger>
              <Trigger Property="IsPressed" Value="True">
                <Setter TargetName="border" Property="Background" Value="{StaticResource AddBoardFrameButtonClick}"/>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>


    <!-- ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ estilo para los botones de funciones ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ -->
    <Style x:Key="FunctionButtonStyle" TargetType="Button">
      <Setter Property="Padding" Value="10,6"/>
      <Setter Property="Background" Value="{StaticResource FunctionButtonBakground}"/>
      <Setter Property="BorderBrush" Value="Transparent"/>
      <Setter Property="BorderThickness" Value="2"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="Cursor" Value="Hand"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">

            <Border x:Name="Root"
                Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="8">
              <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
            </Border>

            <ControlTemplate.Triggers>
              <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="Root" Property="Background" Value="{StaticResource FunctionButtonHover}"/>
                <Setter TargetName="Root" Property="BorderBrush" Value="#404040"/>
              </Trigger>

              <Trigger Property="IsPressed" Value="True">
                <Setter TargetName="Root" Property="Background" Value="{StaticResource FunctionButtonClick}"/>
                <Setter TargetName="Root" Property="BorderBrush" Value="#555555"/>
              </Trigger>

              <Trigger Property="IsEnabled" Value="False">
                <Setter TargetName="Root" Property="Opacity" Value="0.4"/>
                <Setter Property="Foreground" Value="#777"/>
              </Trigger>

            </ControlTemplate.Triggers>

          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>


    <!-- ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ estilo del scroll de los paneles ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ -->
    <Style x:Key="DarkScrollBarStyle" TargetType="ScrollBar">
      <Setter Property="Width" Value="6"/>
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="ScrollBar">
            <Grid Background="Transparent">
              <Track Name="PART_Track" IsDirectionReversed="False"
                 Focusable="false">
                <Track.DecreaseRepeatButton>
                  <RepeatButton Visibility="Collapsed" IsTabStop="False"/>
                </Track.DecreaseRepeatButton>
                <Track.Thumb>
                  <Thumb>
                    <Thumb.Template>
                      <ControlTemplate TargetType="Thumb">
                        <Border Width="6" Background="#3B3B3B" CornerRadius="3"
                            VerticalAlignment="Stretch" HorizontalAlignment="Center"/>
                      </ControlTemplate>
                    </Thumb.Template>
                  </Thumb>
                </Track.Thumb>
                <Track.IncreaseRepeatButton>
                  <RepeatButton Visibility="Collapsed" IsTabStop="False"/>
                </Track.IncreaseRepeatButton>
              </Track>
            </Grid>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>



  </Application.Resources>
</Application>

<Application x:Class="craftingTask.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:craftingTask"
             StartupUri="view/windows/MainWindow.xaml">
  <Application.Resources>
    <!-- ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ paleta de colores para estilos ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ -->
    <SolidColorBrush x:Key="MainBackground" Color="#101010"/>
    <SolidColorBrush x:Key="SecondaryBackground" Color="#141414"/>
    <SolidColorBrush x:Key="BackgroundForeground" Color="#1a1a1a"/>
    <SolidColorBrush x:Key="MainForeground" Color="#EBEBEB"/>
    <SolidColorBrush x:Key="SecondaryForeground" Color="#A8A8A8"/>
    <SolidColorBrush x:Key="MainBorderColor" Color="#2A2A2A"/>

    <SolidColorBrush x:Key="PanelBackground" Color="#141414"/>
    <SolidColorBrush x:Key="PanelBorder" Color="#3B3B3B"/>
    <SolidColorBrush x:Key="PanelTitleForeground" Color="#3B3B3B"/>

    <SolidColorBrush x:Key="TaskBackground" Color="#252525"/>
    <SolidColorBrush x:Key="TaskBorder" Color="#3A3A3A"/>
    <SolidColorBrush x:Key="TaskTitleForeground" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="TaskEndDateForeground" Color="#A0A0A0"/>
    <SolidColorBrush x:Key="TaskPriorityBorder" Color="#5A5A5A"/>
    <SolidColorBrush x:Key="TaskPriorityForeground" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="TaskTagBorder" Color="#4A4A4A"/>
    <SolidColorBrush x:Key="TaskTagBackground" Color="#2E2E2E"/>
    <SolidColorBrush x:Key="TaskTagForeground" Color="#B0B0B0"/>

    <SolidColorBrush x:Key="PopupBackground" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="PopupBorder" Color="#3A3A3A"/>
    <SolidColorBrush x:Key="PopupForeground" Color="#D0D0D0"/>
    <SolidColorBrush x:Key="PopupInputBackground" Color="#141414"/>
    <SolidColorBrush x:Key="PopupInputForeground" Color="#A8A8A8"/>
    <SolidColorBrush x:Key="PopupInputBorder" Color="#444"/>

    
    <!-- colores de los botones -->
    <SolidColorBrush x:Key="MinimizeButtonBackground" Color="#30D158"/>
    <SolidColorBrush x:Key="MinimizeButtonHover" Color="#28B048"/>
    <SolidColorBrush x:Key="MinimizeButtonClick" Color="#229938"/>

    <SolidColorBrush x:Key="MaximizeButtonBackground" Color="#FFD60A"/>
    <SolidColorBrush x:Key="MaximizeButtonHover" Color="#E6C009"/>
    <SolidColorBrush x:Key="MaximizeButtonClick" Color="#CCAA08"/>

    <SolidColorBrush x:Key="CloseButtonBackground" Color="#FF453A"/>
    <SolidColorBrush x:Key="CloseButtonHover" Color="#E63C31"/>
    <SolidColorBrush x:Key="CloseButtonClick" Color="#CC3328"/>

    <SolidColorBrush x:Key="CloseFrameButtonBackground" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="CloseFrameButtonHover" Color="#ADADAD"/>
    <SolidColorBrush x:Key="CloseFrameButtonClick" Color="#969696"/>

    <SolidColorBrush x:Key="AddBoardButtonBackground" Color="#3B3B3B"/>
    <SolidColorBrush x:Key="AddBoardFrameButtonHover" Color="#262626"/>
    <SolidColorBrush x:Key="AddBoardFrameButtonClick" Color="#0D0D0D"/>

    <SolidColorBrush x:Key="FunctionButtonBakground" Color="#2B2B2B"/>
    <SolidColorBrush x:Key="FunctionButtonHover" Color="#262626"/>
    <SolidColorBrush x:Key="FunctionButtonClick" Color="#0F0F0F"/>


    <!-- ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ estilo del boton de minimizar ventana ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ -->
    <Style x:Key="MinimizeWindowButton" TargetType="Button">
      <Setter Property="Background" Value="{StaticResource MinimizeButtonBackground}"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Width" Value="50"/>
      <Setter Property="Height" Value="50"/>
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="Cursor" Value="Hand"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border x:Name="border"
              Background="{TemplateBinding Background}"
              CornerRadius="25">
              <ContentPresenter HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
              <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="border" Property="Background" Value="{StaticResource MinimizeButtonHover}"/>
              </Trigger>
              <Trigger Property="IsPressed" Value="True">
                <Setter TargetName="border" Property="Background" Value="{StaticResource MinimizeButtonClick}"/>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>


    <!-- ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ estilo del boton de maximizar ventana ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ -->
    <Style x:Key="MaximizeWindowButton" TargetType="Button">
      <Setter Property="Background" Value="{StaticResource MaximizeButtonBackground}"/>
      <Setter Property="Foreground" Value="#1C1C1E"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Width" Value="50"/>
      <Setter Property="Height" Value="50"/>
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="Cursor" Value="Hand"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border x:Name="border"
              Background="{TemplateBinding Background}"
              CornerRadius="25">
              <ContentPresenter HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
              <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="border" Property="Background" Value="{StaticResource MaximizeButtonHover}"/>
              </Trigger>
              <Trigger Property="IsPressed" Value="True">
                <Setter TargetName="border" Property="Background" Value="{StaticResource MaximizeButtonClick}"/>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>


    <!-- ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ estilo del boton de cerrar ventana ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ -->
    <Style x:Key="CloseWindowButton" TargetType="Button">
      <Setter Property="Background" Value="{StaticResource CloseButtonBackground}"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Width" Value="50"/>
      <Setter Property="Height" Value="50"/>
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="Cursor" Value="Hand"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border x:Name="border"
              Background="{TemplateBinding Background}"
              CornerRadius="25">
              <ContentPresenter HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
              <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="border" Property="Background" Value="{StaticResource CloseButtonHover}"/>
              </Trigger>
              <Trigger Property="IsPressed" Value="True">
                <Setter TargetName="border" Property="Background" Value="{StaticResource CloseButtonClick}"/>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>


    <!-- ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ estilo de boton invisible ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ -->
    <Style x:Key="InvisibleButton" TargetType="Button">
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="BorderBrush" Value="Transparent"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Padding" Value="0"/>
      <Setter Property="OverridesDefaultStyle" Value="True"/>

      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <ContentPresenter/>
          </ControlTemplate>
        </Setter.Value>
      </Setter>

      <Setter Property="Focusable" Value="False"/>
    </Style>


    <!-- ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ estilo del boton de cerrar paginas ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ -->
    <Style x:Key="CloseFrameButton" TargetType="Button">
      <Setter Property="Background" Value="{StaticResource CloseFrameButtonBackground}"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Width" Value="50"/>
      <Setter Property="Height" Value="50"/>
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="Cursor" Value="Hand"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border x:Name="border"
          Background="{TemplateBinding Background}"
          CornerRadius="25">
              <ContentPresenter HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
              <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="border" Property="Background" Value="{StaticResource CloseFrameButtonHover}"/>
              </Trigger>
              <Trigger Property="IsPressed" Value="True">
                <Setter TargetName="border" Property="Background" Value="{StaticResource CloseFrameButtonClick}"/>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>


    <!-- ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ estilo del boton de agregar paginas ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ -->
    <Style x:Key="AddBoardButton" TargetType="Button">
      <Setter Property="Background" Value="{StaticResource AddBoardButtonBackground}"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Width" Value="50"/>
      <Setter Property="Height" Value="50"/>
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="Cursor" Value="Hand"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border x:Name="border"
      Background="{TemplateBinding Background}"
      CornerRadius="25">
              <ContentPresenter HorizontalAlignment="Center"
                  VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
              <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="border" Property="Background" Value="{StaticResource AddBoardFrameButtonHover}"/>
              </Trigger>
              <Trigger Property="IsPressed" Value="True">
                <Setter TargetName="border" Property="Background" Value="{StaticResource AddBoardFrameButtonClick}"/>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>


    <!-- ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ estilo para los botones de funciones ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ -->
    <Style x:Key="FunctionButtonStyle" TargetType="Button">
      <Setter Property="Padding" Value="10,6"/>
      <Setter Property="Background" Value="{StaticResource FunctionButtonBakground}"/>
      <Setter Property="BorderBrush" Value="Transparent"/>
      <Setter Property="BorderThickness" Value="2"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="Cursor" Value="Hand"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">

            <Border x:Name="Root"
                Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="8">
              <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
            </Border>

            <ControlTemplate.Triggers>
              <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="Root" Property="Background" Value="{StaticResource FunctionButtonHover}"/>
                <Setter TargetName="Root" Property="BorderBrush" Value="#404040"/>
              </Trigger>

              <Trigger Property="IsPressed" Value="True">
                <Setter TargetName="Root" Property="Background" Value="{StaticResource FunctionButtonClick}"/>
                <Setter TargetName="Root" Property="BorderBrush" Value="#555555"/>
              </Trigger>

              <Trigger Property="IsEnabled" Value="False">
                <Setter TargetName="Root" Property="Opacity" Value="0.4"/>
                <Setter Property="Foreground" Value="#777"/>
              </Trigger>

            </ControlTemplate.Triggers>

          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>


    <!-- ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ estilo del scroll vertical de los paneles ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ -->
    <Style x:Key="DarkScrollBarStyle" TargetType="ScrollBar">
      <Setter Property="Width" Value="6"/>
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="ScrollBar">
            <Grid Background="Transparent">
              <Track Name="PART_Track" IsDirectionReversed="False"
                 Focusable="false">
                <Track.DecreaseRepeatButton>
                  <RepeatButton Visibility="Collapsed" IsTabStop="False"/>
                </Track.DecreaseRepeatButton>
                <Track.Thumb>
                  <Thumb>
                    <Thumb.Template>
                      <ControlTemplate TargetType="Thumb">
                        <Border Width="6" Background="#3B3B3B" CornerRadius="3"
                            VerticalAlignment="Stretch" HorizontalAlignment="Center"/>
                      </ControlTemplate>
                    </Thumb.Template>
                  </Thumb>
                </Track.Thumb>
                <Track.IncreaseRepeatButton>
                  <RepeatButton Visibility="Collapsed" IsTabStop="False"/>
                </Track.IncreaseRepeatButton>
              </Track>
            </Grid>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>


    <!-- ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ estilo del scroll horizontal de los paneles ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ -->
    <Style x:Key="DarkHorizontalScrollBarStyle" TargetType="ScrollBar">
      <Setter Property="Height" Value="6" />
      <Setter Property="Background" Value="Transparent" />
      <Setter Property="Orientation" Value="Horizontal" />
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="ScrollBar">
            <Grid Background="Transparent">
              <Track x:Name="PART_Track" Focusable="False" IsDirectionReversed="False">
                <Track.DecreaseRepeatButton>
                  <RepeatButton Visibility="Collapsed" IsTabStop="False"/>
                </Track.DecreaseRepeatButton>

                <Track.Thumb>
                  <Thumb>
                    <Thumb.Template>
                      <ControlTemplate TargetType="Thumb">
                        <Border Height="6" Background="#3B3B3B" CornerRadius="3"
                            HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                      </ControlTemplate>
                    </Thumb.Template>
                  </Thumb>
                </Track.Thumb>

                <Track.IncreaseRepeatButton>
                  <RepeatButton Visibility="Collapsed" IsTabStop="False"/>
                </Track.IncreaseRepeatButton>
              </Track>
            </Grid>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>


    <!-- ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ estilo para los textbox ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ -->
    <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
      <Setter Property="Background" Value="{StaticResource SecondaryBackground}" />
      <Setter Property="Foreground" Value="{StaticResource SecondaryForeground}" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="Padding" Value="8,4" />
      <Setter Property="SnapsToDevicePixels" Value="True" />
      <Setter Property="BorderBrush" Value="{StaticResource MainBorderColor}" />
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="TextBox">
            <Grid>
              <Border x:Name="Border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
                      BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6" />

              <TextBlock x:Name="Placeholder" Text="Escribe Aquí el Nombre del Tablero" Foreground="#555"
                         Margin="10,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False" Visibility="Collapsed" />

              <ScrollViewer x:Name="PART_ContentHost" Background="Transparent" />
            </Grid>

            <ControlTemplate.Triggers>
              <MultiTrigger>
                <MultiTrigger.Conditions>
                  <Condition Property="Text" Value="" />
                  <Condition Property="IsKeyboardFocused" Value="False" />
                </MultiTrigger.Conditions>
                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible" />
              </MultiTrigger>

              <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="Border" Property="BorderBrush" Value="#3A3A3A"/>
              </Trigger>

              <Trigger Property="IsKeyboardFocused" Value="True">
                <Setter TargetName="Border" Property="BorderBrush" Value="#5F5F5F"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed" />
              </Trigger>

              <Trigger Property="IsEnabled" Value="False">
                <Setter TargetName="Border" Property="Opacity" Value="0.5"/>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>


    <!-- ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ estilo para el selector de color ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ -->
    <Style x:Key="ColorSelectorTextBoxStyle" TargetType="TextBox">
      <Setter Property="Background" Value="{StaticResource SecondaryBackground}" />
      <Setter Property="Foreground" Value="{StaticResource SecondaryForeground}" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="Padding" Value="8,4" />
      <Setter Property="SnapsToDevicePixels" Value="True" />
      <Setter Property="BorderBrush" Value="{StaticResource MainBorderColor}" />
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="TextBox">
            <Grid>
              <Border x:Name="Border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6" />

              <TextBlock x:Name="Placeholder" Text="Selecciona un Color" Foreground="#555"
                     Margin="10,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False" Visibility="Collapsed" />

              <ScrollViewer x:Name="PART_ContentHost" Background="Transparent" />
            </Grid>

            <ControlTemplate.Triggers>
              <MultiTrigger>
                <MultiTrigger.Conditions>
                  <Condition Property="Text" Value="" />
                  <Condition Property="IsKeyboardFocused" Value="False" />
                </MultiTrigger.Conditions>
                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible" />
              </MultiTrigger>

              <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="Border" Property="BorderBrush" Value="#3A3A3A"/>
              </Trigger>

              <Trigger Property="IsKeyboardFocused" Value="True">
                <Setter TargetName="Border" Property="BorderBrush" Value="#5F5F5F"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed" />
              </Trigger>

              <Trigger Property="IsEnabled" Value="False">
                <Setter TargetName="Border" Property="Opacity" Value="0.5"/>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>

    <!-- ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ estilo de textbox sencillo para la app ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ -->
    <Style x:Key="SimpleDarkTextBoxStyle" TargetType="TextBox">
      <Setter Property="Background" Value="{StaticResource SecondaryBackground}" />
      <Setter Property="Foreground" Value="{StaticResource SecondaryForeground}" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="Padding" Value="8,4" />
      <Setter Property="SnapsToDevicePixels" Value="True" />
      <Setter Property="BorderBrush" Value="{StaticResource MainBorderColor}" />
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="TextBox">
            <Grid>
              <Border x:Name="Border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
              BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6" />

              <TextBlock x:Name="Placeholder" Text="" Foreground="#555"
                 Margin="10,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False" Visibility="Collapsed" />

              <ScrollViewer x:Name="PART_ContentHost" Background="Transparent" />
            </Grid>

            <ControlTemplate.Triggers>
              <MultiTrigger>
                <MultiTrigger.Conditions>
                  <Condition Property="Text" Value="" />
                  <Condition Property="IsKeyboardFocused" Value="False" />
                </MultiTrigger.Conditions>
                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible" />
              </MultiTrigger>

              <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="Border" Property="BorderBrush" Value="#3A3A3A"/>
              </Trigger>

              <Trigger Property="IsKeyboardFocused" Value="True">
                <Setter TargetName="Border" Property="BorderBrush" Value="#5F5F5F"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed" />
              </Trigger>

              <Trigger Property="IsEnabled" Value="False">
                <Setter TargetName="Border" Property="Opacity" Value="0.5"/>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>

    
    <!-- ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ conjunto de estilos para el selector de colores POPUP ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ -->
    <Style x:Key="PopupButtonStyle" TargetType="Button" BasedOn="{StaticResource FunctionButtonStyle}">
      <Setter Property="Width" Value="70"/>
      <Setter Property="Height" Value="28"/>
      <Setter Property="Margin" Value="6,0,0,0"/>
    </Style>
    <Style x:Key="PopupTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource RoundedTextBoxStyle}">
      <Setter Property="Width" Value="120"/>
      <Setter Property="Background" Value="{StaticResource PopupInputBackground}"/>
      <Setter Property="Foreground" Value="{StaticResource PopupInputForeground}"/>
      <Setter Property="BorderBrush" Value="{StaticResource PopupInputBorder}"/>
      <Setter Property="BorderThickness" Value="1"/>
    </Style>
    <Style x:Key="PopupPreviewBorderStyle" TargetType="Border">
      <Setter Property="Height" Value="40"/>
      <Setter Property="CornerRadius" Value="6"/>
      <Setter Property="BorderBrush" Value="#383838"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>


    <!-- ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ estilo de un listbox para eliminar los boards, panels o tareas ▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁▁ -->
    <Style x:Key="GenericDarkListBoxStyle" TargetType="ListBox">
      <Setter Property="Background" Value="{StaticResource SecondaryBackground}" />
      <Setter Property="Foreground" Value="{StaticResource MainForeground}" />
      <Setter Property="BorderBrush" Value="{StaticResource MainBorderColor}" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="Padding" Value="6"/>
      <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
      <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="ListBox">
            <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
              <ScrollViewer Focusable="False">
                <ItemsPresenter/>
              </ScrollViewer>
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>

    <Style x:Key="GenericDarkListBoxItemStyle" TargetType="ListBoxItem">
      <Setter Property="Padding" Value="0"/>
      <Setter Property="Margin" Value="6,4"/>
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="Cursor" Value="Hand"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="ListBoxItem">
            <Border x:Name="RootBorder" Background="{TemplateBinding Background}" CornerRadius="8" BorderThickness="1" BorderBrush="{StaticResource MainBorderColor}">
              <Grid Margin="0">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="8"/>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="30"/>
                </Grid.ColumnDefinitions>

                <Border Background="{Binding Color}" Grid.Column="0" CornerRadius="8,0,0,8"/>
                <TextBlock Text="{Binding Name}" Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0"
                           Foreground="{StaticResource MainForeground}" FontSize="16" FontWeight="SemiBold"/>
                <CheckBox Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"
                          IsChecked="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}, Mode=TwoWay}">
                  <CheckBox.Template>
                    <ControlTemplate TargetType="CheckBox">
                      <Grid Width="20" Height="20">
                        <Border x:Name="BorderBox" CornerRadius="4" Background="{StaticResource SecondaryBackground}" BorderBrush="{StaticResource MainBorderColor}" BorderThickness="2"/>
                        <Path x:Name="CheckMark" Data="M0,5 L4,9 L12,0" Stroke="{StaticResource AddBoardButtonBackground}" StrokeThickness="2" Visibility="Collapsed" Stretch="Uniform"/>
                      </Grid>

                      <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                          <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                          <Setter TargetName="BorderBox" Property="Background" Value="{StaticResource PanelBackground}"/>
                        </Trigger>
                      </ControlTemplate.Triggers>
                    </ControlTemplate>
                  </CheckBox.Template>
                </CheckBox>
              </Grid>
            </Border>

            <ControlTemplate.Triggers>
              <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="RootBorder" Property="Background" Value="{StaticResource PanelBackground}"/>
              </Trigger>
              <Trigger Property="IsSelected" Value="True">
                <Setter TargetName="RootBorder" Property="Background" Value="{StaticResource AddBoardButtonBackground}"/>
              </Trigger>
              <Trigger Property="IsEnabled" Value="False">
                <Setter TargetName="RootBorder" Property="Opacity" Value="0.5"/>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
  </Application.Resources>
</Application>

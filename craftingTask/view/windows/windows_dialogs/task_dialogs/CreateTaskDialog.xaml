<Window x:Class="craftingTask.view.windows.windows_dialogs.task_dialogs.CreateTaskDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:craftingTask.view.windows.windows_dialogs.task_dialogs"
        mc:Ignorable="d"
        Title="CreateTaskDialog" Height="700" Width="600" WindowStartupLocation="CenterScreen" AllowsTransparency="True" WindowStyle="None" Background="{x:Null}">
  <Border Background="{StaticResource MainBackground}" CornerRadius="12">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="22"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>

      <Grid x:Name="titleBar" Grid.Row="0">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="22"/>
          <ColumnDefinition Width="22"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="minimizeButton" Click="btnMinimizeWindowClick" Style="{StaticResource MinimizeWindowButton}" Grid.Column="1" Width="auto" Height="auto" Margin="4,6,6,4"/>
        <Button x:Name="closeButton" Click="btnCloseWindowClick" Style="{StaticResource CloseWindowButton}" Grid.Column="2" Width="auto" Height="auto" Margin="4,6,6,4"/>
      </Grid>

      <Grid x:Name="content" Grid.Row="1">
        <Grid.RowDefinitions>
          <RowDefinition Height="*"/>
          <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Margin="5" CornerRadius="12">
          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition Height="1.5*"/>
              <RowDefinition Height="1.3*"/>
              <RowDefinition Height="1.3*"/>
              <RowDefinition Height="1.3*"/>
              <RowDefinition Height="1.3*"/>
              <RowDefinition Height="0.5*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="5,30,5,5">
              <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
              </Grid.RowDefinitions>

              <TextBlock Grid.Row="0" Text="TITULO" FontSize="24" FontWeight="DemiBold" Foreground="{StaticResource MainForeground}"
                         VerticalAlignment="Bottom" Margin="15,0,0,5"/>
              <TextBox x:Name="txtTaskTitleSelector" Grid.Row="1" FontSize="18" FontWeight="Normal" VerticalAlignment="Top" Margin="5,0,5,10" 
                       Style="{StaticResource TaskTitleDarkTextBox}" Height="35"/>
              <Border Grid.Row="1" VerticalAlignment="Bottom" Background="{StaticResource SecondaryBackground}" Width="Auto" Height="2"/>
            </Grid>

            <!-- ___________________________________________________________________________________________________________________________ -->
            <Grid Grid.Row="1" Margin="5">
              <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
              </Grid.RowDefinitions>

              <TextBlock Grid.Row="0" Text="DESCRIPCION" FontSize="24" FontWeight="DemiBold" Foreground="{StaticResource MainForeground}"
                         VerticalAlignment="Bottom" Margin="15,0,0,5"/>
              <TextBox x:Name="txtTaskDescriptionSelector" Grid.Row="1" FontSize="18" FontWeight="Normal" VerticalAlignment="Top" Margin="5,0,5,10" 
                       Style="{StaticResource TaskDescriptionDarkTextBox}" Height="35"/>
              <Border Grid.Row="1" VerticalAlignment="Bottom" Background="{StaticResource SecondaryBackground}" Width="Auto" Height="2"/>
            </Grid>

            <!-- ___________________________________________________________________________________________________________________________ -->
            <Grid Grid.Row="2" Margin="5">
              <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
              </Grid.RowDefinitions>

              <TextBlock Grid.Row="0" Text="FECHA DE LIMITE DE LA TAREA" FontSize="24" FontWeight="DemiBold" Foreground="{StaticResource MainForeground}"
                         VerticalAlignment="Bottom" Margin="15,0,0,5"/>
              <DatePicker x:Name="datePickerTaskDeadlineSelector" Grid.Row="1" VerticalAlignment="Top" Margin="5,0,5,10" Height="40"
                          Style="{StaticResource SimpleDarkDatePickerStyle}" FontSize="18" FontWeight="Normal"
                          Loaded="datePickerTaskDeadlineSelector_Loaded"/>
            </Grid>

            <!-- ___________________________________________________________________________________________________________________________ -->
            <Grid Grid.Row="3" Margin="5">
              <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
              </Grid.RowDefinitions>

              <TextBlock Grid.Row="0" Text="PRIORIDAD" FontSize="24" FontWeight="DemiBold" Foreground="{StaticResource MainForeground}"
                         VerticalAlignment="Bottom" Margin="15,0,0,5"/>
              <ComboBox  Grid.Row="1" VerticalAlignment="Top" Margin="5,0,5,10" ItemsSource="{Binding PriorityList}"
                        SelectedValuePath="Key" SelectedValue="{Binding SelectedPriority, Mode=TwoWay}"
                        SelectedIndex="0" Height="40" Style="{StaticResource DarkSimpleComboBox}" FontSize="18" FontWeight="Normal">
                <ComboBox.ItemTemplate>
                  <DataTemplate>
                    <TextBlock Text="{Binding Value}" VerticalAlignment="Center" Padding="6,2"/>
                  </DataTemplate>
                </ComboBox.ItemTemplate>
              </ComboBox>
            </Grid>

            <!-- ___________________________________________________________________________________________________________________________ -->
            <Grid Grid.Row="4" Margin="5">
              <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
              </Grid.RowDefinitions>

              <TextBlock Grid.Row="0" Text="TAG O ETIQUETA" FontSize="24" FontWeight="DemiBold" Foreground="{StaticResource MainForeground}"
                         VerticalAlignment="Bottom" Margin="15,0,0,5"/>
              <TextBox x:Name="txtTaskTagSelector" Grid.Row="1" FontSize="18" FontWeight="Normal" VerticalAlignment="Top" Margin="5,0,5,10" 
                       Style="{StaticResource TaskTagDarkTextBox}" Height="35"/>
              <Border Grid.Row="1" VerticalAlignment="Bottom" Background="{StaticResource SecondaryBackground}" Width="Auto" Height="2"/>
            </Grid>
          </Grid>
        </Border>

        <Grid Grid.Row="1">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>

          <Button x:Name="btnCancelCreation" Content="Cancelar" Style="{StaticResource FunctionButtonStyle}" Margin="4,4,2,4"
                  VerticalAlignment="Center" Padding="0,4" Grid.Column="0" Click="btnCancelCreation_Click"/>
          <Button x:Name="btnCreateTask" Content="Crear Tarea" Style="{StaticResource FunctionButtonStyle}" Margin="2,4,4,4"
                  VerticalAlignment="Center" Padding="0,4" Grid.Column="1" Click="btnCreateTask_Click"/>
        </Grid>
      </Grid>
    </Grid>
  </Border>
</Window>

<Window x:Class="craftingTask.view.windows.windows_dialogs.task_dialogs.AttachmentPreviewWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Vista previa de adjunto" Width="800" Height="600" AllowsTransparency="True" Background="Transparent" ResizeMode="CanResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
  <Border Background="#1A1A1A" BorderBrush="#333333" BorderThickness="1" CornerRadius="12">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="40"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <Border Grid.Row="0" Background="#252525" CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
          </Grid.ColumnDefinitions>
          <TextBlock x:Name="txtFileName" Grid.Column="0" Margin="15,0,0,0" VerticalAlignment="Center" FontSize="14" FontWeight="SemiBold" Foreground="White" Text="Vista previa"/>
          <StackPanel Grid.Column="1" Orientation="Horizontal">
            <Button Width="40" Height="40" Background="Transparent" BorderThickness="0" Click="btnMinimize_Click" Content="─" FontSize="16" Foreground="White" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
            <Button Width="40" Height="40" Background="Transparent" BorderThickness="0" Click="btnClose_Click" Content="✕" FontSize="16" Foreground="White" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
          </StackPanel>
        </Grid>
      </Border>
      <Grid Grid.Row="1" Margin="10">
        <Image x:Name="ImgViewer" Stretch="Uniform" Visibility="Collapsed"/>
        <WebBrowser x:Name="PdfViewer" Visibility="Collapsed"/>
        <TextBlock x:Name="txtLoading" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="#888888" Text="Cargando..." Visibility="Collapsed"/>
      </Grid>
    </Grid>
  </Border>
</Window>

<Window x:Class="craftingTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:craftingTask"
        mc:Ignorable="d" 
        Height="1000" Width="1700" WindowStartupLocation="CenterScreen" AllowsTransparency="True" WindowStyle="None" Background="{x:Null}">
  <Border x:Name="mainBorder" Background="{StaticResource MainBackground}" CornerRadius="12">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="35"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>

      <Grid x:Name="titleBar" Grid.Row="0">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="200"/>
          <ColumnDefinition Width="200"/>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="25"/>
          <ColumnDefinition Width="25"/>
          <ColumnDefinition Width="25"/>
          <ColumnDefinition Width="3"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="btnShowReminders" Grid.Column="0" Content="Recordatorios" FontSize="8" Style="{StaticResource FunctionButtonStyle}"
                Padding="0" Margin="5" Click="btnShowReminders_Click"/>
        <Button x:Name="btnCalendarView" Grid.Column="1" Content="Calendario" FontSize="8" Style="{StaticResource FunctionButtonStyle}"
                Padding="0" Margin="5" Click="btnCalendarView_Click"/>

        <Grid Grid.Column="3" Grid.ColumnSpan="3">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>
          <Button x:Name="minimizeButton" Click="btnMinimizeWindow" Style="{StaticResource MinimizeWindowButton}" Grid.Column="0" Width="15" Height="15"/>
          <Button x:Name="maximizeButton" Click="btnMaximizeWindow" Style="{StaticResource MaximizeWindowButton}" Grid.Column="1" Width="15" Height="15"/>
          <Button x:Name="closeButton" Click="btnCloseWindow" Style="{StaticResource CloseWindowButton}" Grid.Column="2" Width="15" Height="15"/>
        </Grid>
      </Grid>

      <Grid x:Name="contentArea" Grid.Row="1" Margin="5">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="0.35*"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Name="boardsBorder" Grid.Column="0" Margin="10,10,5,10" Background="{StaticResource SecondaryBackground}" CornerRadius="10">
          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition Height="*"/>
              <RowDefinition Height="35"/>
            </Grid.RowDefinitions>

            <ListView Grid.Row="0" ItemsSource="{Binding BoardList}" Background="Transparent" BorderBrush="Transparent" Margin="5">
              <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                  <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                  <Setter Property="Background" Value="Transparent"/>
                  <Setter Property="BorderThickness" Value="0"/>
                  <Setter Property="Padding" Value="0"/>
                  <Setter Property="Margin" Value="0"/>
                  <Setter Property="Template">
                    <Setter.Value>
                      <ControlTemplate TargetType="ListViewItem">
                        <Border Background="{TemplateBinding Background}" BorderThickness="0">
                          <ContentPresenter />
                        </Border>
                      </ControlTemplate>
                    </Setter.Value>
                  </Setter>
                  <EventSetter Event="PreviewMouseLeftButtonDown" Handler="ListViewItem_MouseDoubleClick"/>
                </Style>
              </ListView.ItemContainerStyle>
              <ListView.ItemTemplate>
                <DataTemplate>
                  <Button Style="{StaticResource InvisibleButton}" HorizontalAlignment="Stretch">
                    <Grid Margin="2,2.5,2,2.5">
                      <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                      </Grid.ColumnDefinitions>
                      <Border Grid.Column="0" Grid.ColumnSpan="2" Width="auto" Background="#181818" CornerRadius="8" Padding="15">
                        <StackPanel Margin="30,0,0,0">
                          <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Bold" Foreground="White"/>
                          <TextBlock Text="{Binding CreationDate}" FontSize="9" Foreground="White" Margin="0,8,0,0"/>
                        </StackPanel>
                      </Border>
                      <Border Grid.Column="0" Width="10" CornerRadius="8 0 0 8" HorizontalAlignment="Left" Background="{Binding Color}" />
                    </Grid>
                  </Button>
                </DataTemplate>
              </ListView.ItemTemplate>
            </ListView>

            <Grid Grid.Row="1">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.6*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>

              <Button x:Name="btnCreateBoard" Grid.Column="1" Margin="0,0,5,5" Style="{StaticResource FunctionButtonStyle}" Content="Crear Tablero"
                      VerticalAlignment="Center" Padding="0,4" Click="btnCreateBoard_Click"/>
              <Button x:Name="btnDeleteBoards" Grid.Column="2" Margin="0,0,5,5" Style="{StaticResource FunctionButtonStyle}" Content="Borrar Tableros"
                      VerticalAlignment="Center" Padding="0,4" Click="btnDeleteBoards_Click"/>
            </Grid>
          </Grid>
        </Border>
        <TextBlock Name="welcomeMessage" Grid.Column="1" Text="Welcome to Kadro" FontFamily="Poppins" FontSize="28"
                   VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{StaticResource BackgroundForeground}"/>
        <Frame Name="boardsFrame" Grid.Column="1" Margin="5,10,10,10" NavigationUIVisibility="Hidden" Navigated="BoardsFrame_Navigated">

        </Frame>
      </Grid>
      
       <!-- PopUp de Notificacion de Inicio -->
      <Popup x:Name="NotificationPopup" AllowsTransparency="True" Placement="Relative" PlacementTarget="{Binding ElementName=contentArea}" 
             IsOpen="False" StaysOpen="True">
        <Border Background="{StaticResource TaskBackground}" BorderBrush="{StaticResource TaskBorder}" BorderThickness="1" CornerRadius="10" 
                Padding="16,12" MinWidth="280" MaxWidth="350">
          <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="3" BlurRadius="15" Opacity="0.5"/>
          </Border.Effect>

          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,8">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>

              <TextBlock Grid.Column="0" Text="⏰" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>

              <TextBlock Grid.Column="1" Text="Recordatorio de Tareas" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TaskTitleForeground}"
                         VerticalAlignment="Center"/>

              <Button Grid.Column="2" x:Name="btnCloseNotification" Click="btnCloseNotification_Click" Style="{StaticResource InvisibleButton}"
                      Width="20" Height="20" VerticalAlignment="Center" Cursor="Hand">
                <TextBlock Text="✕" FontSize="16" Foreground="{StaticResource SecondaryForeground}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
              </Button>
            </Grid>

            <TextBlock Grid.Row="1" x:Name="txtNotificationMessage" Text="Tienes 5 tareas próximas a vencer" FontSize="13" 
                       Foreground="{StaticResource SecondaryForeground}" TextWrapping="Wrap" LineHeight="18" Margin="0,0,0,12"/>

            <Button Grid.Row="2" x:Name="btnViewReminders" Click="btnViewReminders_Click" Style="{StaticResource FunctionButtonStyle}"
                    Content="Ver Recordatorios" HorizontalAlignment="Stretch" Padding="0,6"/>
          </Grid>
        </Border>
      </Popup>
    </Grid>
  </Border>
</Window>
